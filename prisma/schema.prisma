generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  provider  String   @default("email")
  createdAt DateTime @default(now())

  organizations Organization[] @relation("OwnedOrganizations")
  members       OrganizationMember[]
  datasets      Dataset[]
  dbConnections DatabaseConnection[]
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  ownerId   String
  createdAt DateTime @default(now())

  owner  User @relation("OwnedOrganizations", fields: [ownerId], references: [id])
  members OrganizationMember[]
  datasets   Dataset[]
  dbConnections DatabaseConnection[]
}

model OrganizationMember {
  id        String   @id @default(uuid())
  userId    String
  orgId     String
  role      String   // "owner" | "editor" | "viewer"
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  org  Organization @relation(fields: [orgId], references: [id])
}

model Dataset {
  id           String   @id @default(uuid())
  name         String
  orgId        String
  createdBy    String
  sourceType   String          // "file" | "postgres"
  config       Json            // file path, db connection, table name, etc.
  createdAt    DateTime @default(now())

  org          Organization @relation(fields: [orgId], references: [id])
  user         User          @relation(fields: [createdBy], references: [id])
}

model DatabaseConnection {
  id        String   @id @default(uuid())
  orgId     String
  createdBy String
  type      String    // "postgres"
  config    Json      // host, port, user, password, database
  createdAt DateTime @default(now())

  org  Organization @relation(fields: [orgId], references: [id])
  user User         @relation(fields: [createdBy], references: [id])
}